<div class="row mb-4 align-items-center">
  <div class="col">
    <h1 class="display-5">My Library</h1>
  </div>
  <div class="col-auto">
    <a href="/books/search" class="btn btn-vintage">Add New Book</a>
  </div>
</div>

<% if (books.length === 0) { %>
  <div class="text-center py-5">
    <div class="display-1 text-muted mb-3">ðŸ“–</div>
    <h3>The shelves are empty.</h3>
    <p class="text-muted">Start building your collection today.</p>
    <a href="/books/search" class="btn btn-outline-dark mt-3">Search Books</a>
  </div>
<% } else { %>
  <div class="row">
    <% books.forEach(book => { %>
      <%- include('../partials/book_card', { book: book }) %>
    <% }) %>
  </div>
<% } %>