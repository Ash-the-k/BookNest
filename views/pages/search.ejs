<div class="row justify-content-center mb-5">
  <div class="col-md-8 text-center">
    <h1 class="mb-4">Search The Archives</h1>
    <form method="GET" action="/books/search" class="d-flex gap-2">
      <input type="text" name="q" class="form-control form-control-lg" placeholder="Title, author, or ISBN..." value="<%= query %>" required>
      <button type="submit" class="btn btn-vintage btn-lg">Search</button>
    </form>
  </div>
</div>

<hr class="my-4" style="border-color: var(--accent-gold); opacity: 0.5;">

<% if (query && results.length === 0) { %>
  <p class="text-center text-muted">No manuscripts found matching your query.</p>
<% } %>

<div class="row">
  <% results.forEach(book => { %>
    <%- include('../partials/book_card', { book: book }) %>
  <% }) %>
</div>

<div class="d-flex justify-content-between mt-5">
  <% if (page > 1) { %>
    <a href="/books/search?q=<%= query %>&page=<%= page - 1 %>" class="btn btn-outline-dark">← Previous</a>
  <% } else { %>
    <div></div> 
  <% } %>

  <% if (results.length === 8) { %>
    <a href="/books/search?q=<%= query %>&page=<%= page + 1 %>" class="btn btn-outline-dark">Next →</a>
  <% } %>
</div>